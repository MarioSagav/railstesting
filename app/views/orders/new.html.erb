<!DOCTYPE html>
<html>
<head>
	<title></title>
</head>
<body>
	<%= form_for @order do |f| %>
	<%=f.label :customer %>
	<%=f.text_field :customer_id %>
	<br>
	<%=f.label :truck_id %>
	<%=f.text_field :truck_id%>
	<br>
	<%=f.label :date %>
	<%=f.text_field :date %>
	<br>
	<%=f.label :distance %>
	<%=f.text_field :distance %>
  <br>
  <h1>informacion de la evaluacion</h1>
    <%= fields_for :evaluation, @order.evaluation do |eval|%>
      description: <%=eval.text_field :description%>
      <br>
      note: <%= eval.number_field :note %>
    <% end %>
	<%= f.submit %>
	<% end %>
</body>
</html>
